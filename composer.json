{
  "name": "markocupic/preloader-overlay",
  "description": "Cover body with an overlay (and icon) while page is loading",
  "keywords": [
    "contao",
    "preloader overlay"
  ],
  "type": "contao-module",
  "license": "MIT",
  "authors": [
    {
      "name": "Marko Cupic",
      "email": "m.cupic@gmx.ch",
      "homepage": "https://github.com/markocupic",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/markocupic/preloader-overlay/issues",
    "source": "https://github.com/markocupic/preloader-overlay"
  },
  "require": {
    "contao/core-bundle": "^4.5"
  },
  "require-dev": {
    "contao/easy-coding-standard": "^5.0",
    "contao/manager-bundle": "^4.13",
    "contao/manager-plugin": "^2.3.1",
    "contao/test-case": "^4.6",
    "phpunit/phpunit": "^9.3",
    "symfony/phpunit-bridge": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "Markocupic\\PreloaderOverlay\\": "src/"
    },
    "exclude-from-classmap": [
      "src/Resources/contao/templates"
    ]
  },
  "extra": {
    "contao-manager-plugin": "Markocupic\\PreloaderOverlay\\ContaoManager\\Plugin"
  }
}
